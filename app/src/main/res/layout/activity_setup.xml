<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.jaaska.jaakko.calendarcountdown.SetupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large"
        android:text="Setup Countdown"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/textViewSetupTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textStyle="bold"
        android:id="@+id/textViewEndDateTitle"
        android:layout_below="@id/textViewSetupTitle"/>


    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEndDateTitle"
        android:id="@+id/calendarViewEndDate"></CalendarView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Exclude Weekends"
        android:id="@+id/checkBoxExcludeWeekends"
        android:layout_below="@id/calendarViewEndDate"/>


</RelativeLayout>
