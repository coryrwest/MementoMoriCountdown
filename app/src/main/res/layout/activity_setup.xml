<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.jaaska.jaakko.calendarcountdown.ui.SetupActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textStyle="bold"
        android:textSize="@dimen/text_body"
        android:id="@+id/textViewEndDateTitle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:id="@+id/relativeLayoutEndDate"
        android:layout_below="@id/textViewEndDateTitle" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_dark"
            android:id="@+id/imageViewCalendar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSetEndDate"
            android:text="24.12.1969"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/imageViewCalendar" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLabel"
            android:hint="What happens at that date?"
            android:layout_below="@id/imageViewCalendar"/>

    </RelativeLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Exclude Weekends"
        android:id="@+id/checkBoxExcludeWeekends"
        android:layout_below="@id/relativeLayoutEndDate"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Use This On Widget"
        android:id="@+id/checkBoxWidget"
        android:layout_below="@id/checkBoxExcludeWeekends"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluded Days"
        android:id="@+id/textViewExcludedDaysTitle"
        android:textStyle="bold"
        android:textSize="@dimen/text_body"
        android:layout_below="@id/checkBoxWidget"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddExcludeRange"
        android:textSize="@dimen/text_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@id/textViewExcludedDaysTitle"
        android:text="Add"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonAddExcludeRange"
        android:layout_alignParentBottom="true"
        android:id="@+id/recyclerViewExcludedDays"></android.support.v7.widget.RecyclerView>



</RelativeLayout>
